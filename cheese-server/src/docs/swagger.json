{
  "openapi": "3.1.0",
  "info": {
    "title": "PZ Cheeseria API",
    "description": "The Cheese API of PZ Cheeseria.",
    "version": "1.0.0"
  },
  "paths": {
    "/cheeses": {
      "get": {
        "description": "Returns a list of all cheeses PZ Cheeseria offers.",
        "responses": {
          "200": {
            "description": "An array of countries. An example of the first five elements in the array is shown below.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/new_cheese": {
      "post": {
        "description": "Creates a new cheese entry.",
        "requestBody": {
          "description": "The credentials of the user to log in.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Cheddar"
                  },
                  "colour": {
                    "type": "string",
                    "example": "Yellow"
                  },
                  "price_per_kilo": {
                    "type": "number",
                    "example": 4.99
                  }
                }
              }
            }
          }
        }
      }
    },
    "/update_cheese/{id}": {
      "patch": {
        "description": "Updates an existing cheese entry.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the cheese to update.",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "requestBody": {
          "description": "The credentials of the user to log in.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Cheddar"
                  },
                  "colour": {
                    "type": "string",
                    "example": "Yellow"
                  },
                  "price_per_kilo": {
                    "type": "number",
                    "example": 4.99
                  },
                  "image": {
                    "type": "string",
                    "example": "image.png"
                  },
                  "description": {
                    "type": "string",
                    "example": "This cheese is really good!"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/delete_cheese/{id}": {
      "delete": {
        "description": "Deletes an existing cheese entry.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the cheese to delete.",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ]
      }
    }
        
  }
}
